<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-create-invoice-table" author="family-hobbies-team">
        <comment>Creates t_invoice table for invoice management linked to payments</comment>

        <createTable tableName="t_invoice">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_invoice_payment"
                             references="t_payment(id)"/>
            </column>
            <column name="invoice_number" type="VARCHAR(50)">
                <constraints unique="true" uniqueConstraintName="uq_invoice_number"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="DRAFT">
                <constraints nullable="false"/>
            </column>
            <column name="issued_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="due_date" type="DATE"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="t_invoice" indexName="idx_invoice_payment_id">
            <column name="payment_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
