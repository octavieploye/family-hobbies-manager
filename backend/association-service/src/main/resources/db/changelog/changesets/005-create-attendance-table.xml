<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-create-attendance-table" author="family-hobbies-team">
        <comment>Creates t_attendance table for session attendance tracking (Sprint 4 - S4-001)</comment>

        <createTable tableName="t_attendance">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="session_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="family_member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="subscription_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="session_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="TEXT"/>
            <column name="marked_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key to t_session -->
        <addForeignKeyConstraint baseTableName="t_attendance"
                                 baseColumnNames="session_id"
                                 referencedTableName="t_session"
                                 referencedColumnNames="id"
                                 constraintName="fk_attendance_session"/>

        <!-- Foreign key to t_subscription -->
        <addForeignKeyConstraint baseTableName="t_attendance"
                                 baseColumnNames="subscription_id"
                                 referencedTableName="t_subscription"
                                 referencedColumnNames="id"
                                 constraintName="fk_attendance_subscription"/>

        <!-- Unique constraint: one record per member per session per date -->
        <addUniqueConstraint tableName="t_attendance"
                             columnNames="session_id, family_member_id, session_date"
                             constraintName="uq_attendance_session_member_date"/>

        <!-- Indexes -->
        <createIndex tableName="t_attendance" indexName="idx_attendance_session_date">
            <column name="session_id"/>
            <column name="session_date"/>
        </createIndex>

        <createIndex tableName="t_attendance" indexName="idx_attendance_member">
            <column name="family_member_id"/>
        </createIndex>

        <createIndex tableName="t_attendance" indexName="idx_attendance_subscription">
            <column name="subscription_id"/>
        </createIndex>

        <!-- Check constraint for attendance status values -->
        <addCheckConstraint tableName="t_attendance" constraintName="chk_attendance_status"
                            condition="status IN ('PRESENT', 'ABSENT', 'EXCUSED', 'LATE')"/>

    </changeSet>

</databaseChangeLog>
