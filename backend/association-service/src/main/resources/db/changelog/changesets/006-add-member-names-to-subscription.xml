<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006-add-member-names-to-subscription" author="family-hobbies-team">
        <comment>Adds member_first_name and member_last_name columns to t_subscription.
            Stores member names at subscription creation time to avoid cross-service calls
            at read time (member data lives in user-service). Sprint 3-4 fix H-001.</comment>

        <addColumn tableName="t_subscription">
            <column name="member_first_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="member_last_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
