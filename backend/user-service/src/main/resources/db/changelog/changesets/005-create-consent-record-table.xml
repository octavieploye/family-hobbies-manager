<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-create-consent-record-table" author="family-hobbies-team">
        <comment>Creates t_consent_record table for RGPD consent audit trail (Sprint 4 - S4-003)</comment>

        <createTable tableName="t_consent_record">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="consent_type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="granted" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="VARCHAR(500)"/>
            <column name="version" type="VARCHAR(20)" defaultValue="1.0">
                <constraints nullable="false"/>
            </column>
            <column name="consented_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign key to t_user -->
        <addForeignKeyConstraint baseTableName="t_consent_record"
                                 baseColumnNames="user_id"
                                 referencedTableName="t_user"
                                 referencedColumnNames="id"
                                 constraintName="fk_consent_record_user"
                                 onDelete="CASCADE"/>

        <!-- Indexes -->
        <createIndex tableName="t_consent_record" indexName="idx_consent_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="t_consent_record" indexName="idx_consent_type_user">
            <column name="consent_type"/>
            <column name="user_id"/>
        </createIndex>

        <!-- Check constraint for consent type values -->
        <addCheckConstraint tableName="t_consent_record" constraintName="chk_consent_type"
                            condition="consent_type IN ('TERMS_OF_SERVICE', 'DATA_PROCESSING', 'MARKETING_EMAIL', 'THIRD_PARTY_SHARING')"/>

    </changeSet>

</databaseChangeLog>
